{
    "name": "marwen-brini/bob-the-builder",
    "description": "A complete ORM and query builder for PHP with Laravel-like fluent syntax, models, and relationships",
    "version": "2.1.0",
    "type": "library",
    "keywords": ["orm", "database", "query-builder", "sql", "mysql", "postgresql", "sqlite", "pdo", "laravel", "eloquent", "activerecord", "relationships", "model"],
    "license": "MIT",
    "homepage": "https://github.com/Marwen-Brini/bob-the-builder",
    "authors": [
        {
            "name": "Marwen-Brini",
            "email": "brini.marwen@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/Marwen-Brini/bob-the-builder/issues",
        "source": "https://github.com/Marwen-Brini/bob-the-builder"
    },
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "ext-pdo": "*",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.0|^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bob\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/bob"
    ],
    "scripts": {
        "test": "vendor/bin/pest --coverage --min=100",
        "test:coverage": "vendor/bin/pest --coverage --min=100",
        "format": "vendor/bin/pint",
        "format:test": "vendor/bin/pint --test",
        "check": [
            "@test",
            "@format:test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
